<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#696969"
    android:layout_marginTop="4dp"
    android:layout_weight="10"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:paddingTop="20dp"

        android:orientation="vertical"
        android:background="#F8F8FF"
        >

        <TextView
            android:id="@+id/testinput"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#696969"
            android:text=""

            android:textSize="60dp">

        </TextView>
        <TextView
            android:id="@+id/testoutput"
            android:layout_marginLeft="60dp"
            android:background="#696969"
            android:layout_width="300dp"
            android:layout_height="50dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight=""
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:backgroundTint="#696969"
                android:text="OFF"
                android:textSize="15dp"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:backgroundTint="#696969"
                android:text="MRC"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:backgroundTint="#696969"
                android:text="M-"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:backgroundTint="#696969"
                android:text="M+"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
        <Button
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_weight=""
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:backgroundTint="#696969"
                android:text="%"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:backgroundTint="#696969"
                android:text="Can"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:backgroundTint="#696969"
                android:text="MC"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:backgroundTint="#696969"
                android:text="MR"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
        <Button
            android:backgroundTint="#696969"
            android:text="/"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:backgroundTint="#696969"
                android:text="+/-"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:id="@+id/seven"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:id="@+id/eight"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:id="@+id/nine"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </Button>
        </LinearLayout>
        <Button
            android:backgroundTint="#696969"
            android:text="*"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:backgroundTint="#696969"
                android:text="$"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:id="@+id/four"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:id="@+id/five"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:id="@+id/six"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </Button>
        </LinearLayout>
        <Button
            android:backgroundTint="#696969"
            android:text="-"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:text="+"
        android:textSize="30dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:backgroundTint="#d2691e"
                    android:text="CE"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Button>
                <Button
                    android:id="@+id/one"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Button>
                <Button
                    android:id="@+id/two"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Button>
                <Button
                    android:id="@+id/three"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:backgroundTint="#d2691e"
                    android:text="ON/C"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Button>
                <Button
                    android:id="@+id/zero"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Button>
                <Button
                    android:id="@+id/cham"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Button>
                <Button
                    android:id="@+id/bang"
                    android:text="="
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="10dp"

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:backgroundTint="#696969"
            android:text="+"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>

</LinearLayout>